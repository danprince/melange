<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {{ if .Page.Data.title }}
      <title>{{ .Page.Data.title }}</title>
    {{ end }}
    <style>{{ .DefaultStyles }}</style>
  </head>
  <body>
    <main>
      {{ with .Page.Data }}
        {{ if .title }}
          <h1>{{ .title }}</h1>
        {{ end }}
        {{ if .date }}
          <time>{{ .date }}</time>
        {{ end }}
      {{ end }}
      {{ .Page.Contents }}
    </main>
  </body>
</html>
